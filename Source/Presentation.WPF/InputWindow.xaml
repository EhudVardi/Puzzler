<Window x:Class="Presentation.WPF.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="350" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <DockPanel Grid.ColumnSpan="3" >
            <TextBox AcceptsReturn="True" x:Name="tbInput" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TextWrapping="Wrap" IsEnabled="True"/>
        </DockPanel>
        <Button Name="btnOK" Grid.Row="1" Grid.Column="0" Content="OK" Click="btnOK_Click"/>
        <Button Name="btnCancel" Grid.Row="1" Grid.Column="2" Content="Cancel" Click="btnCancel_Click"/>
    </Grid>
</Window>
