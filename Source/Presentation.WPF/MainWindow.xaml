<Window x:Class="Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solvers" Height="500" Width="600">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid >
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="104*"></RowDefinition>
                        <RowDefinition Height="122*"></RowDefinition>
                        <RowDefinition Height="48*"></RowDefinition>
                        <RowDefinition Height="175*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <GroupBox VerticalAlignment="Top" Height="90" Grid.Row="0" Header="Puzzle Type" Margin="3,3,3,3">
                        <DockPanel>
                            <RadioButton x:Name="btnSelectSudoku" DockPanel.Dock="Top" Content="Sudoku" IsChecked="True"></RadioButton>
                            <RadioButton x:Name="btnSelectKakuru" DockPanel.Dock="Top" Content="Kakuru" ></RadioButton>
                            <RadioButton x:Name="btnSelectGriddler" DockPanel.Dock="Top" Content="Griddler" ></RadioButton>
                            <RadioButton x:Name="btnSelectGriddlerRails" DockPanel.Dock="Top" Content="Griddler Rails" ></RadioButton>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox VerticalAlignment="Top" Grid.Row="1" Header="Load" Margin="3,3,3,0" Height="109">
                        <DockPanel >
                            <Button x:Name="btnLoadSudoku" VerticalAlignment="Top" DockPanel.Dock="Top" Content="Sudoku" ></Button>
                            <Button x:Name="btnLoadKakuru" VerticalAlignment="Top" Height="20" DockPanel.Dock="Top" Content="Kakuru" ></Button>
                            <Button x:Name="btnLoadGriddler" VerticalAlignment="Top" Height="20" DockPanel.Dock="Top" Content="Griddler" ></Button>
                            <Button x:Name="btnLoadGriddlerRails" VerticalAlignment="Top" Height="20" DockPanel.Dock="Top" Content="Griddler Rails" ></Button>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox VerticalAlignment="Top" Grid.Row="2" Header="Generate" Margin="3,3,3,0" Height="43">
                        <DockPanel >
                            <Button x:Name="btnRandom"  VerticalAlignment="Top" DockPanel.Dock="Top" Height="20" Content="Random" ></Button>
                        </DockPanel >
                    </GroupBox>
                    <GroupBox VerticalAlignment="Top" Grid.Row="3" Header="Display" Margin="3,3,3,0" Height="71">
                        <DockPanel >
                            <RadioButton x:Name="rbtnClean" VerticalAlignment="Top" DockPanel.Dock="Top" Content="Clean" IsChecked="True"></RadioButton>
                            <RadioButton x:Name="rbtnHints" VerticalAlignment="Top" DockPanel.Dock="Top" Content="Hints" ></RadioButton>
                            <RadioButton x:Name="rbtnSolved" VerticalAlignment="Top" DockPanel.Dock="Top" Content="Solved" ></RadioButton>
                        </DockPanel >
                    </GroupBox>
                </Grid>

                <GridSplitter Grid.Column="1"></GridSplitter>

                <Canvas Grid.Column="2" x:Name="GameCanvas">
                </Canvas>

            </Grid>

        </Grid>
        <DockPanel Grid.Row="1">
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBlock x:Name="lblStatusTitle">Status:</TextBlock>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock x:Name="lblStatus">---Status---</TextBlock>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
