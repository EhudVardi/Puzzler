<Window x:Class="Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:UserControls="clr-namespace:Presentation.WPF"
        Title="Solvers" Height="500" Width="600"
        Loaded="Window_Loaded"
        MouseDown="Window_MouseDown"
        MouseMove="Window_MouseMove"
        MouseDoubleClick="Window_MouseDoubleClick"
        MouseUp="Window_MouseUp"
        MouseWheel="Window_MouseWheel"
        KeyDown="Window_KeyDown">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="25"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid >
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <GroupBox VerticalAlignment="Top" Height="90" Grid.Row="0" Header="Puzzle Type" Margin="3,3,3,3">
                        <DockPanel>
                            <RadioButton x:Name="btnSelectSudoku" DockPanel.Dock="Top" Content="Sudoku" IsChecked="True" Checked="btnSelectPuzzles_Checked"></RadioButton>
                            <RadioButton x:Name="btnSelectKakuru" DockPanel.Dock="Top" Content="Kakuru" Checked="btnSelectPuzzles_Checked" ></RadioButton>
                            <RadioButton x:Name="btnSelectGriddler" DockPanel.Dock="Top" Content="Griddler" Checked="btnSelectPuzzles_Checked" ></RadioButton>
                            <RadioButton x:Name="btnSelectGriddlerRails" DockPanel.Dock="Top" Content="Griddler Rails" Checked="btnSelectPuzzles_Checked" ></RadioButton>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox VerticalAlignment="Top" Grid.Row="1" Header="Load" Margin="3,3,3,0" Height="109">
                        <DockPanel >
                            <Button x:Name="btnLoadFromFile" VerticalAlignment="Top" DockPanel.Dock="Top" Content="File" Click="btnLoadFromFile_Click" ></Button>
                            <Button x:Name="btnLoadFromWeb" VerticalAlignment="Top" Height="20" DockPanel.Dock="Top" Content="Web" Click="btnLoadFromWeb_Click" ></Button>
                            <Button x:Name="btnLoadFromText" VerticalAlignment="Top" Height="20" DockPanel.Dock="Top" Content="Text" Click="btnLoadFromText_Click"></Button>
                        </DockPanel>
                    </GroupBox>
                    <GroupBox VerticalAlignment="Top" Grid.Row="2" Header="Generate" Margin="3,3,3,0" Height="43">
                        <DockPanel >
                            <Button x:Name="btnRandom"  VerticalAlignment="Top" DockPanel.Dock="Top" Height="20" Content="Random" Click="btnRandom_Click"></Button>
                        </DockPanel >
                    </GroupBox>
                    <GroupBox VerticalAlignment="Top" Grid.Row="3" Header="Display" Margin="3,3,3,0" Height="71">
                        <DockPanel >
                            <RadioButton x:Name="rbtnClean" VerticalAlignment="Top" DockPanel.Dock="Top" Content="Clean" IsChecked="True" Checked="rbtnDisplayModes_Checked"></RadioButton>
                            <RadioButton x:Name="rbtnHints" VerticalAlignment="Top" DockPanel.Dock="Top" Content="Hints" Checked="rbtnDisplayModes_Checked" ></RadioButton>
                            <RadioButton x:Name="rbtnSolved" VerticalAlignment="Top" DockPanel.Dock="Top" Content="Solved"  Checked="rbtnDisplayModes_Checked"></RadioButton>
                        </DockPanel >
                    </GroupBox>
                </Grid>

                <GridSplitter Grid.Column="1"></GridSplitter>

                <UserControls:PuzzlerCanvas Grid.Column="2" x:Name="GameCanvas" Margin="3">

                </UserControls:PuzzlerCanvas>
            </Grid>

        </Grid>
        <DockPanel Grid.Row="1">
            <StatusBar DockPanel.Dock="Bottom">
                <StatusBarItem>
                    <TextBox x:Name="lblStatusTitle">Status:</TextBox>
                    <!--<TextBlock x:Name="lblStatusTitle">Status:</TextBlock>-->
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock x:Name="lblStatus">---Status---</TextBlock>
                </StatusBarItem>
            </StatusBar>
        </DockPanel>
    </Grid>
</Window>
